@code {
    [Parameter]
    public string JobId { get; set; } = string.Empty;

    private JobStatusResponse? job;
    private bool loading = true;
    private string? error;
    private bool autoRefresh = false;
    private Timer? refreshTimer;

    // Validation state
    private SubtitleValidationResult? validationResult;
    private bool validating = false;
    private string? validationError;

    // Chat state
    private List<ConversationMessage> chatMessages = new();
    private string chatMessage = string.Empty;
    private bool sendingChat = false;
    private bool loadingChatHistory = false;
    private string? chatError;
    private ElementReference chatHistoryElement;
    
    // Multi-agent chat state
    private string selectedAgentType = "Orchestrator";

    // Use validation result from API if available, otherwise use locally fetched one
    private SubtitleValidationResult? CurrentValidationResult => job?.ValidationResult ?? validationResult;

    // Check if chat is available (either single-agent or multi-agent)
    private bool HasChatCapability => 
        !string.IsNullOrEmpty(job?.ValidationThreadId) || 
        job?.HasMultiAgentValidation == true;

    private bool IsProcessing => job?.Status != null && 
        !job.Status.Equals("Completed", StringComparison.OrdinalIgnoreCase) &&
        !job.Status.Equals("Failed", StringComparison.OrdinalIgnoreCase) &&
        !job.Status.Equals("Approved", StringComparison.OrdinalIgnoreCase) &&
        !job.Status.Equals("Rejected", StringComparison.OrdinalIgnoreCase) &&
        !job.Status.Equals("PendingApproval", StringComparison.OrdinalIgnoreCase);

    // Helper method for validation card border color
    private string GetValidationCardBorderClass()
    {
        if (job?.HasMultiAgentValidation == true && job.MultiAgentValidation != null)
        {
            return job.MultiAgentValidation.Recommendation switch
            {
                "Approve" => "border-success",
                "NeedsReview" => "border-warning",
                "Reject" => "border-danger",
                _ => ""
            };
        }
        if (CurrentValidationResult != null)
        {
            return CurrentValidationResult.IsValid ? "border-success" : "border-warning";
        }
        return "";
    }

    // Helper method for multi-agent severity badge class
    private static string GetMultiAgentSeverityClass(string? severity)
    {
        return severity?.ToLower() switch
        {
            "critical" => "bg-danger",
            "high" => "bg-warning text-dark",
            "medium" => "bg-info",
            "low" => "bg-secondary",
            _ => "bg-secondary"
        };
    }

    // Helper method to get agent display name with icon
    private string GetAgentDisplayName(string? agentType)
    {
        return agentType switch
        {
            "Orchestrator" => "üéØ Orchestrator",
            "Translation" => "üìù Translation Agent",
            "Technical" => "‚öôÔ∏è Technical Agent",
            "Cultural" => "üåç Cultural Agent",
            _ => "AI Agent"
        };
    }

    protected override async Task OnInitializedAsync()
    {
        await LoadJob();
        
        // Load chat history if chat capability exists (single-agent or multi-agent)
        if (HasChatCapability)
        {
            await LoadChatHistory();
        }
        
        // Auto-start refresh if processing
        if (IsProcessing)
        {
            StartAutoRefresh();
        }
    }

    private async Task LoadJob()
    {
        loading = true;
        error = null;

        try
        {
            job = await ApiService.GetJobStatusAsync(JobId);
            if (job == null)
            {
                error = "Job not found";
            }
            else if (!IsProcessing && autoRefresh)
            {
                StopAutoRefresh();
            }
        }
        catch (Exception ex)
        {
            error = $"Failed to load job: {ex.Message}";
        }
        finally
        {
            loading = false;
        }
    }

    private async Task ValidateSubtitles()
    {
        validating = true;
        validationError = null;
        validationResult = null;

        try
        {
            var response = await ApiService.ValidateSubtitlesAsync(JobId);
            if (response != null)
            {
                validationResult = response.ValidationResult;
            }
            else
            {
                validationError = "Validation returned no result";
            }
        }
        catch (Exception ex)
        {
            validationError = $"Validation failed: {ex.Message}";
        }
        finally
        {
            validating = false;
        }
    }

    private void StartAutoRefresh()
    {
        autoRefresh = true;
        refreshTimer = new Timer(async _ =>
        {
            await InvokeAsync(async () =>
            {
                await LoadJob();
                StateHasChanged();
            });
        }, null, TimeSpan.FromSeconds(10), TimeSpan.FromSeconds(10));
    }

    private void StopAutoRefresh()
    {
        autoRefresh = false;
        refreshTimer?.Dispose();
        refreshTimer = null;
    }

    private void GoBack()
    {
        Navigation.NavigateTo("/");
    }

    private string GetStatusBadgeClass(string status)
    {
        return status.ToLower() switch
        {
            "submitted" => "bg-secondary",
            "processing" or "validating" or "creatingtranslation" or "creatingiteration" or "copyingoutputs" or "runningvalidation" => "bg-info",
            "pendingapproval" => "bg-warning text-dark",
            "approved" => "bg-success",
            "completed" => "bg-success",
            "rejected" => "bg-danger",
            "failed" => "bg-danger",
            _ => "bg-secondary"
        };
    }

    private static string GetScoreClass(double score)
    {
        return score switch
        {
            >= 0.8 => "text-success",
            >= 0.6 => "text-warning",
            _ => "text-danger"
        };
    }

    private static string GetSeverityBadgeClass(int severity)
    {
        return severity switch
        {
            3 => "bg-danger",        // Critical
            2 => "bg-warning text-dark", // High
            1 => "bg-info",          // Medium
            0 => "bg-secondary",     // Low
            _ => "bg-secondary"
        };
    }

    // Approval modal state
    private bool showApproveModalFlag = false;
    private bool showRejectModalFlag = false;
    private bool isApproving = false;
    private string approverName = string.Empty;
    private string approvalComments = string.Empty;
    private string rejectionReason = string.Empty;

    private void ShowApproveModal()
    {
        showApproveModalFlag = true;
        approverName = string.Empty;
        approvalComments = string.Empty;
    }

    private void ShowRejectModal()
    {
        showRejectModalFlag = true;
        approverName = string.Empty;
        rejectionReason = string.Empty;
    }

    private void CloseApprovalModals()
    {
        showApproveModalFlag = false;
        showRejectModalFlag = false;
    }

    private async Task ApproveJobAsync()
    {
        isApproving = true;
        StateHasChanged();

        try
        {
            await ApiService.ApproveJobAsync(
                JobId,
                string.IsNullOrWhiteSpace(approverName) ? null : approverName,
                string.IsNullOrWhiteSpace(approvalComments) ? null : approvalComments);

            CloseApprovalModals();
            await LoadJob();
        }
        catch (Exception ex)
        {
            error = $"Failed to approve: {ex.Message}";
        }
        finally
        {
            isApproving = false;
            StateHasChanged();
        }
    }

    private async Task RejectJobAsync()
    {
        isApproving = true;
        StateHasChanged();

        try
        {
            await ApiService.RejectJobAsync(
                JobId,
                string.IsNullOrWhiteSpace(approverName) ? null : approverName,
                string.IsNullOrWhiteSpace(rejectionReason) ? null : rejectionReason,
                null);

            CloseApprovalModals();
            await LoadJob();
        }
        catch (Exception ex)
        {
            error = $"Failed to reject: {ex.Message}";
        }
        finally
        {
            isApproving = false;
            StateHasChanged();
        }
    }

    private async Task LoadChatHistory()
    {
        // Skip if no chat capability
        if (!HasChatCapability) return;

        loadingChatHistory = true;
        chatError = null;

        try
        {
            // For multi-agent, pass the selected agent type
            var agentType = job?.HasMultiAgentValidation == true ? selectedAgentType : null;
            var history = await ApiService.GetChatHistoryAsync(JobId, agentType);
            if (history?.Messages != null)
            {
                chatMessages = history.Messages;
            }
        }
        catch (Exception ex)
        {
            chatError = $"Failed to load chat history: {ex.Message}";
        }
        finally
        {
            loadingChatHistory = false;
            StateHasChanged();
        }
    }

    private async Task SendChatMessage()
    {
        if (string.IsNullOrWhiteSpace(chatMessage)) return;

        sendingChat = true;
        chatError = null;
        var messageToSend = chatMessage;
        chatMessage = string.Empty;
        
        // Determine agent type for multi-agent systems
        var agentType = job?.HasMultiAgentValidation == true ? selectedAgentType : null;

        // Add user message immediately for responsiveness
        chatMessages.Add(new ConversationMessage
        {
            Role = "user",
            Content = messageToSend,
            Timestamp = DateTime.UtcNow,
            AgentType = agentType
        });
        StateHasChanged();

        try
        {
            var response = await ApiService.SendChatMessageAsync(JobId, messageToSend, agentType);
            if (response != null && !string.IsNullOrEmpty(response.Message))
            {
                chatMessages.Add(new ConversationMessage
                {
                    Role = "assistant",
                    Content = response.Message,
                    Timestamp = response.Timestamp,
                    AgentType = agentType
                });
            }
        }
        catch (Exception ex)
        {
            chatError = $"Failed to send message: {ex.Message}";
            // Remove the user message if sending failed
            if (chatMessages.Count > 0 && chatMessages[^1].Role == "user")
            {
                chatMessages.RemoveAt(chatMessages.Count - 1);
            }
            chatMessage = messageToSend; // Restore the message
        }
        finally
        {
            sendingChat = false;
            StateHasChanged();
        }
    }

    private async Task HandleChatKeyPress(KeyboardEventArgs e)
    {
        if (e.Key == "Enter" && !sendingChat && !string.IsNullOrWhiteSpace(chatMessage))
        {
            await SendChatMessage();
        }
    }

    public void Dispose()
    {
        refreshTimer?.Dispose();
    }
}
