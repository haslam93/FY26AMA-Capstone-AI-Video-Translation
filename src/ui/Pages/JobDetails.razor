@page "/jobs/{JobId}"
@inject ITranslationApiService ApiService
@inject NavigationManager Navigation
@implements IDisposable

<PageTitle>Job Details - @JobId</PageTitle>

<div class="container mt-4">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/">Dashboard</a></li>
            <li class="breadcrumb-item active" aria-current="page">Job @JobId</li>
        </ol>
    </nav>

    @if (loading)
    {
        <div class="d-flex justify-content-center my-5">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
        </div>
    }
    else if (error != null)
    {
        <div class="alert alert-danger" role="alert">
            <i class="bi bi-exclamation-triangle"></i> @error
            <button class="btn btn-sm btn-outline-danger ms-2" @onclick="LoadJob">
                Retry
            </button>
        </div>
    }
    else if (job != null)
    {
        <div class="row">
            <div class="col-lg-8">
                <div class="card mb-4">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">
                            <i class="bi bi-film"></i> @(job.DisplayName ?? $"Job {job.JobId}")
                        </h5>
                        <span class="badge @GetStatusBadgeClass(job.Status) fs-6">
                            @job.Status
                        </span>
                    </div>
                    <div class="card-body">
                        <div class="row mb-3">
                            <div class="col-sm-3 text-muted">Job ID:</div>
                            <div class="col-sm-9"><code>@job.JobId</code></div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-sm-3 text-muted">Status:</div>
                            <div class="col-sm-9">
                                @job.StatusMessage
                                @if (IsProcessing)
                                {
                                    <span class="spinner-border spinner-border-sm ms-2" role="status"></span>
                                }
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-sm-3 text-muted">Languages:</div>
                            <div class="col-sm-9">
                                <span class="badge bg-secondary">@job.SourceLocale</span>
                                <i class="bi bi-arrow-right mx-2"></i>
                                <span class="badge bg-primary">@job.TargetLocale</span>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-sm-3 text-muted">Iteration:</div>
                            <div class="col-sm-9">@(job.IterationNumber + 1)</div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-sm-3 text-muted">Created:</div>
                            <div class="col-sm-9">@job.CreatedAt.ToString("F")</div>
                        </div>
                        <div class="row">
                            <div class="col-sm-3 text-muted">Updated:</div>
                            <div class="col-sm-9">@job.LastUpdatedAt.ToString("F")</div>
                        </div>
                    </div>
                </div>

                @if (!string.IsNullOrEmpty(job.Error))
                {
                    <div class="card border-danger mb-4">
                        <div class="card-header bg-danger text-white">
                            <i class="bi bi-exclamation-triangle"></i> Error Details
                        </div>
                        <div class="card-body">
                            <p class="mb-0">@job.Error</p>
                        </div>
                    </div>
                }

                @if (job.Result != null && job.Status == "Completed")
                {
                    <div class="card border-success mb-4">
                        <div class="card-header bg-success text-white">
                            <i class="bi bi-check-circle"></i> Translation Complete - Download Outputs
                        </div>
                        <div class="card-body">
                            <div class="list-group">
                                @if (!string.IsNullOrEmpty(job.Result.TranslatedVideoUrl))
                                {
                                    <a href="@job.Result.TranslatedVideoUrl" target="_blank" 
                                       class="list-group-item list-group-item-action d-flex align-items-center">
                                        <i class="bi bi-film me-3 fs-4"></i>
                                        <div>
                                            <h6 class="mb-0">Translated Video</h6>
                                            <small class="text-muted">Video with translated audio</small>
                                        </div>
                                        <i class="bi bi-download ms-auto"></i>
                                    </a>
                                }
                                @if (!string.IsNullOrEmpty(job.Result.SourceSubtitleUrl))
                                {
                                    <a href="@job.Result.SourceSubtitleUrl" target="_blank" 
                                       class="list-group-item list-group-item-action d-flex align-items-center">
                                        <i class="bi bi-file-text me-3 fs-4"></i>
                                        <div>
                                            <h6 class="mb-0">Source Subtitles (WebVTT)</h6>
                                            <small class="text-muted">Original language captions</small>
                                        </div>
                                        <i class="bi bi-download ms-auto"></i>
                                    </a>
                                }
                                @if (!string.IsNullOrEmpty(job.Result.TargetSubtitleUrl))
                                {
                                    <a href="@job.Result.TargetSubtitleUrl" target="_blank" 
                                       class="list-group-item list-group-item-action d-flex align-items-center">
                                        <i class="bi bi-file-text me-3 fs-4"></i>
                                        <div>
                                            <h6 class="mb-0">Translated Subtitles (WebVTT)</h6>
                                            <small class="text-muted">Target language captions</small>
                                        </div>
                                        <i class="bi bi-download ms-auto"></i>
                                    </a>
                                }
                            </div>
                        </div>
                    </div>

                    @* AI Quality Validation Section *@
                    <div class="card mb-4 @(validationResult != null ? (validationResult.IsValid ? "border-success" : "border-warning") : "")">
                        <div class="card-header d-flex justify-content-between align-items-center">
                            <h5 class="mb-0">
                                <i class="bi bi-robot"></i> AI Quality Validation
                            </h5>
                            @if (validationResult != null)
                            {
                                <span class="badge @(validationResult.IsValid ? "bg-success" : "bg-warning") fs-6">
                                    @(validationResult.ConfidenceScore.ToString("P0"))
                                </span>
                            }
                        </div>
                        <div class="card-body">
                            @if (validating)
                            {
                                <div class="text-center py-3">
                                    <div class="spinner-border text-primary" role="status">
                                        <span class="visually-hidden">Analyzing...</span>
                                    </div>
                                    <p class="mt-2 mb-0 text-muted">AI agent is analyzing subtitles...</p>
                                </div>
                            }
                            else if (validationError != null)
                            {
                                <div class="alert alert-danger mb-0">
                                    <i class="bi bi-exclamation-triangle"></i> @validationError
                                </div>
                            }
                            else if (validationResult != null)
                            {
                                @* Overall Score *@
                                <div class="mb-4">
                                    <div class="d-flex justify-content-between mb-1">
                                        <span>Overall Quality Score</span>
                                        <strong class="@(validationResult.ConfidenceScore >= 0.8 ? "text-success" : validationResult.ConfidenceScore >= 0.6 ? "text-warning" : "text-danger")">
                                            @(validationResult.ConfidenceScore.ToString("P0"))
                                        </strong>
                                    </div>
                                    <div class="progress" style="height: 10px;">
                                        <div class="progress-bar @(validationResult.ConfidenceScore >= 0.8 ? "bg-success" : validationResult.ConfidenceScore >= 0.6 ? "bg-warning" : "bg-danger")"
                                             role="progressbar" 
                                             style="width: @(validationResult.ConfidenceScore * 100)%"
                                             aria-valuenow="@(validationResult.ConfidenceScore * 100)" 
                                             aria-valuemin="0" 
                                             aria-valuemax="100">
                                        </div>
                                    </div>
                                </div>

                                @* Category Scores *@
                                @if (validationResult.CategoryScores != null)
                                {
                                    <h6 class="mb-3">Category Scores</h6>
                                    <div class="row row-cols-2 g-2 mb-3">
                                        <div class="col">
                                            <div class="card bg-light">
                                                <div class="card-body p-2 text-center">
                                                    <div class="small text-muted">Translation</div>
                                                    <strong class="@GetScoreClass(validationResult.CategoryScores.TranslationAccuracyScore)">
                                                        @(validationResult.CategoryScores.TranslationAccuracyScore.ToString("P0"))
                                                    </strong>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col">
                                            <div class="card bg-light">
                                                <div class="card-body p-2 text-center">
                                                    <div class="small text-muted">Grammar</div>
                                                    <strong class="@GetScoreClass(validationResult.CategoryScores.GrammarScore)">
                                                        @(validationResult.CategoryScores.GrammarScore.ToString("P0"))
                                                    </strong>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col">
                                            <div class="card bg-light">
                                                <div class="card-body p-2 text-center">
                                                    <div class="small text-muted">Timing</div>
                                                    <strong class="@GetScoreClass(validationResult.CategoryScores.TimingScore)">
                                                        @(validationResult.CategoryScores.TimingScore.ToString("P0"))
                                                    </strong>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col">
                                            <div class="card bg-light">
                                                <div class="card-body p-2 text-center">
                                                    <div class="small text-muted">Cultural</div>
                                                    <strong class="@GetScoreClass(validationResult.CategoryScores.CulturalContextScore)">
                                                        @(validationResult.CategoryScores.CulturalContextScore.ToString("P0"))
                                                    </strong>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }

                                @* Stats *@
                                <div class="small text-muted mb-3">
                                    <i class="bi bi-file-text"></i> @validationResult.SourceCueCount source cues → @validationResult.TargetCueCount target cues
                                    <br/>
                                    <i class="bi bi-chat-text"></i> @validationResult.SourceWordCount source words → @validationResult.TargetWordCount target words
                                </div>

                                @* AI Reasoning *@
                                @if (!string.IsNullOrWhiteSpace(validationResult.Reasoning))
                                {
                                    <div class="alert alert-info mb-3">
                                        <strong><i class="bi bi-lightbulb"></i> AI Analysis:</strong>
                                        <p class="mb-0 mt-1 small">@validationResult.Reasoning</p>
                                    </div>
                                }

                                @* Issues *@
                                @if (validationResult.Issues.Any())
                                {
                                    <h6 class="mb-2">Issues Found (@validationResult.Issues.Count)</h6>
                                    <div class="accordion" id="issuesAccordion">
                                        @for (int i = 0; i < Math.Min(validationResult.Issues.Count, 5); i++)
                                        {
                                            var issue = validationResult.Issues[i];
                                            var collapseId = $"issue-{i}";
                                            <div class="accordion-item">
                                                <h2 class="accordion-header">
                                                    <button class="accordion-button collapsed py-2" type="button" 
                                                            data-bs-toggle="collapse" data-bs-target="#@collapseId">
                                                        <span class="badge @GetSeverityBadgeClass(issue.Severity) me-2">@issue.SeverityText</span>
                                                        <span class="small">@issue.CategoryText</span>
                                                    </button>
                                                </h2>
                                                <div id="@collapseId" class="accordion-collapse collapse" data-bs-parent="#issuesAccordion">
                                                    <div class="accordion-body small">
                                                        <p class="mb-1">@issue.Description</p>
                                                        @if (!string.IsNullOrEmpty(issue.Timestamp))
                                                        {
                                                            <p class="mb-1 text-muted"><i class="bi bi-clock"></i> @issue.Timestamp</p>
                                                        }
                                                        @if (!string.IsNullOrEmpty(issue.SuggestedFix))
                                                        {
                                                            <p class="mb-0 text-success"><i class="bi bi-lightbulb"></i> @issue.SuggestedFix</p>
                                                        }
                                                    </div>
                                                </div>
                                            </div>
                                        }
                                    </div>
                                    @if (validationResult.Issues.Count > 5)
                                    {
                                        <p class="text-muted small mt-2">And @(validationResult.Issues.Count - 5) more issues...</p>
                                    }
                                }
                                else
                                {
                                    <div class="text-success">
                                        <i class="bi bi-check-circle"></i> No issues found!
                                    </div>
                                }
                            }
                            else
                            {
                                <p class="text-muted mb-3">Use AI to analyze translation quality</p>
                                <button class="btn btn-primary w-100" @onclick="ValidateSubtitles">
                                    <i class="bi bi-robot"></i> Analyze Translation Quality
                                </button>
                            }
                        </div>
                    </div>
                }
            </div>

            <div class="col-lg-4">
                <div class="card mb-4">
                    <div class="card-header">
                        <h5 class="mb-0"><i class="bi bi-gear"></i> Actions</h5>
                    </div>
                    <div class="card-body">
                        <div class="d-grid gap-2">
                            <button class="btn btn-outline-primary" @onclick="LoadJob" disabled="@loading">
                                <i class="bi bi-arrow-clockwise"></i> Refresh Status
                            </button>
                            @if (autoRefresh && IsProcessing)
                            {
                                <button class="btn btn-outline-secondary" @onclick="StopAutoRefresh">
                                    <i class="bi bi-pause"></i> Stop Auto-Refresh
                                </button>
                            }
                            else if (IsProcessing)
                            {
                                <button class="btn btn-outline-success" @onclick="StartAutoRefresh">
                                    <i class="bi bi-play"></i> Auto-Refresh
                                </button>
                            }
                            <button class="btn btn-outline-secondary" @onclick="GoBack">
                                <i class="bi bi-arrow-left"></i> Back to Dashboard
                            </button>
                        </div>
                    </div>
                </div>

                @if (autoRefresh)
                {
                    <div class="alert alert-info">
                        <i class="bi bi-info-circle"></i> Auto-refreshing every 10 seconds...
                    </div>
                }
            </div>
        </div>
    }
</div>

@code {
    [Parameter]
    public string JobId { get; set; } = string.Empty;

    private JobStatusResponse? job;
    private bool loading = true;
    private string? error;
    private bool autoRefresh = false;
    private Timer? refreshTimer;

    // Validation state
    private SubtitleValidationResult? validationResult;
    private bool validating = false;
    private string? validationError;

    private bool IsProcessing => job?.Status != null && 
        !job.Status.Equals("Completed", StringComparison.OrdinalIgnoreCase) &&
        !job.Status.Equals("Failed", StringComparison.OrdinalIgnoreCase);

    protected override async Task OnInitializedAsync()
    {
        await LoadJob();
        
        // Auto-start refresh if processing
        if (IsProcessing)
        {
            StartAutoRefresh();
        }
    }

    private async Task LoadJob()
    {
        loading = true;
        error = null;

        try
        {
            job = await ApiService.GetJobStatusAsync(JobId);
            if (job == null)
            {
                error = "Job not found";
            }
            else if (!IsProcessing && autoRefresh)
            {
                StopAutoRefresh();
            }
        }
        catch (Exception ex)
        {
            error = $"Failed to load job: {ex.Message}";
        }
        finally
        {
            loading = false;
        }
    }

    private async Task ValidateSubtitles()
    {
        validating = true;
        validationError = null;
        validationResult = null;

        try
        {
            var response = await ApiService.ValidateSubtitlesAsync(JobId);
            if (response != null)
            {
                validationResult = response.ValidationResult;
            }
            else
            {
                validationError = "Validation returned no result";
            }
        }
        catch (Exception ex)
        {
            validationError = $"Validation failed: {ex.Message}";
        }
        finally
        {
            validating = false;
        }
    }

    private void StartAutoRefresh()
    {
        autoRefresh = true;
        refreshTimer = new Timer(async _ =>
        {
            await InvokeAsync(async () =>
            {
                await LoadJob();
                StateHasChanged();
            });
        }, null, TimeSpan.FromSeconds(10), TimeSpan.FromSeconds(10));
    }

    private void StopAutoRefresh()
    {
        autoRefresh = false;
        refreshTimer?.Dispose();
        refreshTimer = null;
    }

    private void GoBack()
    {
        Navigation.NavigateTo("/");
    }

    private string GetStatusBadgeClass(string status)
    {
        return status.ToLower() switch
        {
            "submitted" => "bg-secondary",
            "processing" or "validating" or "creatingtranslation" or "creatingiteration" or "copyingoutputs" => "bg-info",
            "completed" => "bg-success",
            "failed" => "bg-danger",
            _ => "bg-secondary"
        };
    }

    private static string GetScoreClass(double score)
    {
        return score switch
        {
            >= 0.8 => "text-success",
            >= 0.6 => "text-warning",
            _ => "text-danger"
        };
    }

    private static string GetSeverityBadgeClass(int severity)
    {
        return severity switch
        {
            3 => "bg-danger",        // Critical
            2 => "bg-warning text-dark", // High
            1 => "bg-info",          // Medium
            0 => "bg-secondary",     // Low
            _ => "bg-secondary"
        };
    }

    public void Dispose()
    {
        refreshTimer?.Dispose();
    }
}
