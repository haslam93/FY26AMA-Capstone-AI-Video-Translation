@page "/jobs/{JobId}"
@inject ITranslationApiService ApiService
@inject NavigationManager Navigation
@implements IDisposable

<PageTitle>Job Details - @JobId</PageTitle>

<div class="container mt-4">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/">Dashboard</a></li>
            <li class="breadcrumb-item active" aria-current="page">Job @JobId</li>
        </ol>
    </nav>

    @if (loading)
    {
        <div class="d-flex justify-content-center my-5">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
        </div>
    }
    else if (error != null)
    {
        <div class="alert alert-danger" role="alert">
            <i class="bi bi-exclamation-triangle"></i> @error
            <button class="btn btn-sm btn-outline-danger ms-2" @onclick="LoadJob">
                Retry
            </button>
        </div>
    }
    else if (job != null)
    {
        <div class="row">
            <div class="col-lg-8">
                <div class="card mb-4">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">
                            <i class="bi bi-film"></i> @(job.DisplayName ?? $"Job {job.JobId}")
                        </h5>
                        <span class="badge @GetStatusBadgeClass(job.Status) fs-6">
                            @job.Status
                        </span>
                    </div>
                    <div class="card-body">
                        <div class="row mb-3">
                            <div class="col-sm-3 text-muted">Job ID:</div>
                            <div class="col-sm-9"><code>@job.JobId</code></div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-sm-3 text-muted">Status:</div>
                            <div class="col-sm-9">
                                @job.StatusMessage
                                @if (IsProcessing)
                                {
                                    <span class="spinner-border spinner-border-sm ms-2" role="status"></span>
                                }
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-sm-3 text-muted">Languages:</div>
                            <div class="col-sm-9">
                                <span class="badge bg-secondary">@job.SourceLocale</span>
                                <i class="bi bi-arrow-right mx-2"></i>
                                <span class="badge bg-primary">@job.TargetLocale</span>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-sm-3 text-muted">Iteration:</div>
                            <div class="col-sm-9">@(job.IterationNumber + 1)</div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-sm-3 text-muted">Created:</div>
                            <div class="col-sm-9">@job.CreatedAt.ToString("F")</div>
                        </div>
                        <div class="row">
                            <div class="col-sm-3 text-muted">Updated:</div>
                            <div class="col-sm-9">@job.LastUpdatedAt.ToString("F")</div>
                        </div>
                    </div>
                </div>

                @if (!string.IsNullOrEmpty(job.Error))
                {
                    <div class="card border-danger mb-4">
                        <div class="card-header bg-danger text-white">
                            <i class="bi bi-exclamation-triangle"></i> Error Details
                        </div>
                        <div class="card-body">
                            <p class="mb-0">@job.Error</p>
                        </div>
                    </div>
                }

                @if (job.Result != null && (job.Status == "Completed" || job.Status == "PendingApproval" || job.Status == "Approved" || job.Status == "Rejected"))
                {
                    <div class="card border-success mb-4">
                        <div class="card-header bg-success text-white">
                            <i class="bi bi-check-circle"></i> Translation Complete - Download Outputs
                        </div>
                        <div class="card-body">
                            <div class="list-group">
                                @if (!string.IsNullOrEmpty(job.Result.TranslatedVideoUrl))
                                {
                                    <a href="@job.Result.TranslatedVideoUrl" target="_blank" 
                                       class="list-group-item list-group-item-action d-flex align-items-center">
                                        <i class="bi bi-film me-3 fs-4"></i>
                                        <div>
                                            <h6 class="mb-0">Translated Video</h6>
                                            <small class="text-muted">Video with translated audio</small>
                                        </div>
                                        <i class="bi bi-download ms-auto"></i>
                                    </a>
                                }
                                @if (!string.IsNullOrEmpty(job.Result.SourceSubtitleUrl))
                                {
                                    <a href="@job.Result.SourceSubtitleUrl" target="_blank" 
                                       class="list-group-item list-group-item-action d-flex align-items-center">
                                        <i class="bi bi-file-text me-3 fs-4"></i>
                                        <div>
                                            <h6 class="mb-0">Source Subtitles (WebVTT)</h6>
                                            <small class="text-muted">Original language captions</small>
                                        </div>
                                        <i class="bi bi-download ms-auto"></i>
                                    </a>
                                }
                                @if (!string.IsNullOrEmpty(job.Result.TargetSubtitleUrl))
                                {
                                    <a href="@job.Result.TargetSubtitleUrl" target="_blank" 
                                       class="list-group-item list-group-item-action d-flex align-items-center">
                                        <i class="bi bi-file-text me-3 fs-4"></i>
                                        <div>
                                            <h6 class="mb-0">Translated Subtitles (WebVTT)</h6>
                                            <small class="text-muted">Target language captions</small>
                                        </div>
                                        <i class="bi bi-download ms-auto"></i>
                                    </a>
                                }
                            </div>
                        </div>
                    </div>

                    @* AI Quality Validation Section *@
                    <div class="card mb-4 @GetValidationCardBorderClass()">
                        <div class="card-header d-flex justify-content-between align-items-center">
                            <h5 class="mb-0">
                                <i class="bi bi-robot"></i> AI Quality Validation
                            </h5>
                            @if (job.HasMultiAgentValidation && job.MultiAgentValidation != null)
                            {
                                <span class="badge @job.MultiAgentValidation.RecommendationBadgeClass fs-6">
                                    @job.MultiAgentValidation.Recommendation
                                </span>
                            }
                            else if (CurrentValidationResult != null)
                            {
                                <span class="badge @(CurrentValidationResult.IsValid ? "bg-success" : "bg-warning") fs-6">
                                    @(CurrentValidationResult.ConfidenceScore.ToString("P0"))
                                </span>
                            }
                        </div>
                        <div class="card-body">
                            @if (validating)
                            {
                                <div class="text-center py-3">
                                    <div class="spinner-border text-primary" role="status">
                                        <span class="visually-hidden">Analyzing...</span>
                                    </div>
                                    <p class="mt-2 mb-0 text-muted">AI agents are analyzing subtitles in parallel...</p>
                                </div>
                            }
                            else if (validationError != null)
                            {
                                <div class="alert alert-danger mb-0">
                                    <i class="bi bi-exclamation-triangle"></i> @validationError
                                </div>
                            }
                            else if (job.HasMultiAgentValidation && job.MultiAgentValidation != null)
                            {
                                @* Multi-Agent Validation Display *@
                                var multiAgent = job.MultiAgentValidation;
                                
                                @* Overall Weighted Score *@
                                <div class="mb-4">
                                    <div class="d-flex justify-content-between mb-1">
                                        <span>Overall Weighted Score</span>
                                        <strong class="@multiAgent.ScoreColorClass">
                                            @multiAgent.OverallScore%
                                        </strong>
                                    </div>
                                    <div class="progress" style="height: 10px;">
                                        <div class="progress-bar @(multiAgent.OverallScore >= 80 ? "bg-success" : multiAgent.OverallScore >= 50 ? "bg-warning" : "bg-danger")"
                                             role="progressbar" 
                                             style="width: @multiAgent.OverallScore%"
                                             aria-valuenow="@multiAgent.OverallScore" 
                                             aria-valuemin="0" 
                                             aria-valuemax="100">
                                        </div>
                                    </div>
                                    <div class="small text-muted mt-1">
                                        Weights: Translation 40% ‚Ä¢ Technical 30% ‚Ä¢ Cultural 30%
                                    </div>
                                </div>

                                @* Agent Score Cards *@
                                <h6 class="mb-3">Agent Scores</h6>
                                <div class="row row-cols-3 g-2 mb-4">
                                    @if (multiAgent.TranslationAgent != null)
                                    {
                                        <div class="col">
                                            <div class="card @(multiAgent.TranslationAgent.Score >= 80 ? "border-success" : multiAgent.TranslationAgent.Score >= 50 ? "border-warning" : "border-danger")">
                                                <div class="card-body p-2 text-center">
                                                    <div class="fs-4">üìù</div>
                                                    <div class="small text-muted">Translation</div>
                                                    <strong class="fs-5 @(multiAgent.TranslationAgent.Score >= 80 ? "text-success" : multiAgent.TranslationAgent.Score >= 50 ? "text-warning" : "text-danger")">
                                                        @multiAgent.TranslationAgent.Score%
                                                    </strong>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                    @if (multiAgent.TechnicalAgent != null)
                                    {
                                        <div class="col">
                                            <div class="card @(multiAgent.TechnicalAgent.Score >= 80 ? "border-success" : multiAgent.TechnicalAgent.Score >= 50 ? "border-warning" : "border-danger")">
                                                <div class="card-body p-2 text-center">
                                                    <div class="fs-4">‚öôÔ∏è</div>
                                                    <div class="small text-muted">Technical</div>
                                                    <strong class="fs-5 @(multiAgent.TechnicalAgent.Score >= 80 ? "text-success" : multiAgent.TechnicalAgent.Score >= 50 ? "text-warning" : "text-danger")">
                                                        @multiAgent.TechnicalAgent.Score%
                                                    </strong>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                    @if (multiAgent.CulturalAgent != null)
                                    {
                                        <div class="col">
                                            <div class="card @(multiAgent.CulturalAgent.Score >= 80 ? "border-success" : multiAgent.CulturalAgent.Score >= 50 ? "border-warning" : "border-danger")">
                                                <div class="card-body p-2 text-center">
                                                    <div class="fs-4">üåç</div>
                                                    <div class="small text-muted">Cultural</div>
                                                    <strong class="fs-5 @(multiAgent.CulturalAgent.Score >= 80 ? "text-success" : multiAgent.CulturalAgent.Score >= 50 ? "text-warning" : "text-danger")">
                                                        @multiAgent.CulturalAgent.Score%
                                                    </strong>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                </div>

                                @* Orchestrator Summary *@
                                @if (!string.IsNullOrWhiteSpace(multiAgent.OrchestratorSummary))
                                {
                                    <div class="alert @(multiAgent.Recommendation == "Approve" ? "alert-success" : multiAgent.Recommendation == "NeedsReview" ? "alert-warning" : "alert-danger") mb-3">
                                        <strong><i class="bi bi-lightbulb"></i> Orchestrator Summary:</strong>
                                        <p class="mb-0 mt-1 small">@multiAgent.OrchestratorSummary</p>
                                    </div>
                                }

                                @* Agent Details Accordion *@
                                <div class="accordion mb-3" id="agentDetailsAccordion">
                                    @if (multiAgent.TranslationAgent != null)
                                    {
                                        <div class="accordion-item">
                                            <h2 class="accordion-header">
                                                <button class="accordion-button collapsed py-2" type="button" 
                                                        data-bs-toggle="collapse" data-bs-target="#translationAgentDetails">
                                                    <span class="me-2">üìù</span> Translation Agent Details
                                                    <span class="badge @(multiAgent.TranslationAgent.Score >= 80 ? "bg-success" : multiAgent.TranslationAgent.Score >= 50 ? "bg-warning" : "bg-danger") ms-2">
                                                        @multiAgent.TranslationAgent.Score%
                                                    </span>
                                                </button>
                                            </h2>
                                            <div id="translationAgentDetails" class="accordion-collapse collapse" data-bs-parent="#agentDetailsAccordion">
                                                <div class="accordion-body small">
                                                    <p>@multiAgent.TranslationAgent.Reasoning</p>
                                                    @if (multiAgent.TranslationAgent.Issues?.Any() == true)
                                                    {
                                                        <strong>Issues:</strong>
                                                        <ul class="mb-0">
                                                            @foreach (var issue in multiAgent.TranslationAgent.Issues.Take(5))
                                                            {
                                                                <li>
                                                                    <span class="badge @GetMultiAgentSeverityClass(issue.Severity) me-1">@issue.Severity</span>
                                                                    @issue.Description
                                                                    @if (!string.IsNullOrEmpty(issue.Suggestion))
                                                                    {
                                                                        <br/><small class="text-success"><i class="bi bi-lightbulb"></i> @issue.Suggestion</small>
                                                                    }
                                                                </li>
                                                            }
                                                        </ul>
                                                    }
                                                </div>
                                            </div>
                                        </div>
                                    }
                                    @if (multiAgent.TechnicalAgent != null)
                                    {
                                        <div class="accordion-item">
                                            <h2 class="accordion-header">
                                                <button class="accordion-button collapsed py-2" type="button" 
                                                        data-bs-toggle="collapse" data-bs-target="#technicalAgentDetails">
                                                    <span class="me-2">‚öôÔ∏è</span> Technical Agent Details
                                                    <span class="badge @(multiAgent.TechnicalAgent.Score >= 80 ? "bg-success" : multiAgent.TechnicalAgent.Score >= 50 ? "bg-warning" : "bg-danger") ms-2">
                                                        @multiAgent.TechnicalAgent.Score%
                                                    </span>
                                                </button>
                                            </h2>
                                            <div id="technicalAgentDetails" class="accordion-collapse collapse" data-bs-parent="#agentDetailsAccordion">
                                                <div class="accordion-body small">
                                                    <p>@multiAgent.TechnicalAgent.Reasoning</p>
                                                    @if (multiAgent.TechnicalAgent.Issues?.Any() == true)
                                                    {
                                                        <strong>Issues:</strong>
                                                        <ul class="mb-0">
                                                            @foreach (var issue in multiAgent.TechnicalAgent.Issues.Take(5))
                                                            {
                                                                <li>
                                                                    <span class="badge @GetMultiAgentSeverityClass(issue.Severity) me-1">@issue.Severity</span>
                                                                    @issue.Description
                                                                    @if (!string.IsNullOrEmpty(issue.Suggestion))
                                                                    {
                                                                        <br/><small class="text-success"><i class="bi bi-lightbulb"></i> @issue.Suggestion</small>
                                                                    }
                                                                </li>
                                                            }
                                                        </ul>
                                                    }
                                                </div>
                                            </div>
                                        </div>
                                    }
                                    @if (multiAgent.CulturalAgent != null)
                                    {
                                        <div class="accordion-item">
                                            <h2 class="accordion-header">
                                                <button class="accordion-button collapsed py-2" type="button" 
                                                        data-bs-toggle="collapse" data-bs-target="#culturalAgentDetails">
                                                    <span class="me-2">üåç</span> Cultural Agent Details
                                                    <span class="badge @(multiAgent.CulturalAgent.Score >= 80 ? "bg-success" : multiAgent.CulturalAgent.Score >= 50 ? "bg-warning" : "bg-danger") ms-2">
                                                        @multiAgent.CulturalAgent.Score%
                                                    </span>
                                                </button>
                                            </h2>
                                            <div id="culturalAgentDetails" class="accordion-collapse collapse" data-bs-parent="#agentDetailsAccordion">
                                                <div class="accordion-body small">
                                                    <p>@multiAgent.CulturalAgent.Reasoning</p>
                                                    @if (multiAgent.CulturalAgent.Issues?.Any() == true)
                                                    {
                                                        <strong>Issues:</strong>
                                                        <ul class="mb-0">
                                                            @foreach (var issue in multiAgent.CulturalAgent.Issues.Take(5))
                                                            {
                                                                <li>
                                                                    <span class="badge @GetMultiAgentSeverityClass(issue.Severity) me-1">@issue.Severity</span>
                                                                    @issue.Description
                                                                    @if (!string.IsNullOrEmpty(issue.Suggestion))
                                                                    {
                                                                        <br/><small class="text-success"><i class="bi bi-lightbulb"></i> @issue.Suggestion</small>
                                                                    }
                                                                </li>
                                                            }
                                                        </ul>
                                                    }
                                                </div>
                                            </div>
                                        </div>
                                    }
                                </div>
                            }
                            else if (CurrentValidationResult != null)
                            {
                                @* Legacy Single-Agent Validation Display *@
                                @* Overall Score *@
                                <div class="mb-4">
                                    <div class="d-flex justify-content-between mb-1">
                                        <span>Overall Quality Score</span>
                                        <strong class="@(CurrentValidationResult.ConfidenceScore >= 0.8 ? "text-success" : CurrentValidationResult.ConfidenceScore >= 0.6 ? "text-warning" : "text-danger")">
                                            @(CurrentValidationResult.ConfidenceScore.ToString("P0"))
                                        </strong>
                                    </div>
                                    <div class="progress" style="height: 10px;">
                                        <div class="progress-bar @(CurrentValidationResult.ConfidenceScore >= 0.8 ? "bg-success" : CurrentValidationResult.ConfidenceScore >= 0.6 ? "bg-warning" : "bg-danger")"
                                             role="progressbar" 
                                             style="width: @(CurrentValidationResult.ConfidenceScore * 100)%"
                                             aria-valuenow="@(CurrentValidationResult.ConfidenceScore * 100)" 
                                             aria-valuemin="0" 
                                             aria-valuemax="100">
                                        </div>
                                    </div>
                                </div>

                                @* Category Scores *@
                                @if (CurrentValidationResult.CategoryScores != null)
                                {
                                    <h6 class="mb-3">Category Scores</h6>
                                    <div class="row row-cols-2 g-2 mb-3">
                                        <div class="col">
                                            <div class="card bg-light">
                                                <div class="card-body p-2 text-center">
                                                    <div class="small text-muted">Translation</div>
                                                    <strong class="@GetScoreClass(CurrentValidationResult.CategoryScores.TranslationAccuracyScore)">
                                                        @(CurrentValidationResult.CategoryScores.TranslationAccuracyScore.ToString("P0"))
                                                    </strong>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col">
                                            <div class="card bg-light">
                                                <div class="card-body p-2 text-center">
                                                    <div class="small text-muted">Grammar</div>
                                                    <strong class="@GetScoreClass(CurrentValidationResult.CategoryScores.GrammarScore)">
                                                        @(CurrentValidationResult.CategoryScores.GrammarScore.ToString("P0"))
                                                    </strong>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col">
                                            <div class="card bg-light">
                                                <div class="card-body p-2 text-center">
                                                    <div class="small text-muted">Timing</div>
                                                    <strong class="@GetScoreClass(CurrentValidationResult.CategoryScores.TimingScore)">
                                                        @(CurrentValidationResult.CategoryScores.TimingScore.ToString("P0"))
                                                    </strong>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col">
                                            <div class="card bg-light">
                                                <div class="card-body p-2 text-center">
                                                    <div class="small text-muted">Cultural</div>
                                                    <strong class="@GetScoreClass(CurrentValidationResult.CategoryScores.CulturalContextScore)">
                                                        @(CurrentValidationResult.CategoryScores.CulturalContextScore.ToString("P0"))
                                                    </strong>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }

                                @* Stats *@
                                <div class="small text-muted mb-3">
                                    <i class="bi bi-file-text"></i> @CurrentValidationResult.SourceCueCount source cues ‚Üí @CurrentValidationResult.TargetCueCount target cues
                                    <br/>
                                    <i class="bi bi-chat-text"></i> @CurrentValidationResult.SourceWordCount source words ‚Üí @CurrentValidationResult.TargetWordCount target words
                                </div>

                                @* AI Reasoning *@
                                @if (!string.IsNullOrWhiteSpace(CurrentValidationResult.Reasoning))
                                {
                                    <div class="alert alert-info mb-3">
                                        <strong><i class="bi bi-lightbulb"></i> AI Analysis:</strong>
                                        <p class="mb-0 mt-1 small">@CurrentValidationResult.Reasoning</p>
                                    </div>
                                }

                                @* Issues *@
                                @if (CurrentValidationResult.Issues.Any())
                                {
                                    <h6 class="mb-2">Issues Found (@CurrentValidationResult.Issues.Count)</h6>
                                    <div class="accordion" id="issuesAccordion">
                                        @for (int i = 0; i < Math.Min(CurrentValidationResult.Issues.Count, 5); i++)
                                        {
                                            var issue = CurrentValidationResult.Issues[i];
                                            var collapseId = $"issue-{i}";
                                            <div class="accordion-item">
                                                <h2 class="accordion-header">
                                                    <button class="accordion-button collapsed py-2" type="button" 
                                                            data-bs-toggle="collapse" data-bs-target="#@collapseId">
                                                        <span class="badge @GetSeverityBadgeClass(issue.Severity) me-2">@issue.SeverityText</span>
                                                        <span class="small">@issue.CategoryText</span>
                                                    </button>
                                                </h2>
                                                <div id="@collapseId" class="accordion-collapse collapse" data-bs-parent="#issuesAccordion">
                                                    <div class="accordion-body small">
                                                        <p class="mb-1">@issue.Description</p>
                                                        @if (!string.IsNullOrEmpty(issue.Timestamp))
                                                        {
                                                            <p class="mb-1 text-muted"><i class="bi bi-clock"></i> @issue.Timestamp</p>
                                                        }
                                                        @if (!string.IsNullOrEmpty(issue.SuggestedFix))
                                                        {
                                                            <p class="mb-0 text-success"><i class="bi bi-lightbulb"></i> @issue.SuggestedFix</p>
                                                        }
                                                    </div>
                                                </div>
                                            </div>
                                        }
                                    </div>
                                    @if (CurrentValidationResult.Issues.Count > 5)
                                    {
                                        <p class="text-muted small mt-2">And @(CurrentValidationResult.Issues.Count - 5) more issues...</p>
                                    }
                                }
                                else
                                {
                                    <div class="text-success">
                                        <i class="bi bi-check-circle"></i> No issues found!
                                    </div>
                                }
                            }
                            else
                            {
                                <p class="text-muted mb-3">Use AI agents to analyze translation quality</p>
                                <button class="btn btn-primary w-100" @onclick="ValidateSubtitles">
                                    <i class="bi bi-robot"></i> Analyze Translation Quality
                                </button>
                            }
                        </div>
                    </div>

                    @* AI Chat Panel - Interactive conversation with validation agents *@
                    @if (HasChatCapability)
                    {
                        <div class="card mb-4">
                            <div class="card-header">
                                <h5 class="mb-0">
                                    <i class="bi bi-chat-dots"></i> Ask the AI Agents
                                </h5>
                            </div>
                            <div class="card-body">
                                @* Agent Selector (for multi-agent) *@
                                @if (job.HasMultiAgentValidation)
                                {
                                    <div class="mb-3">
                                        <label class="form-label small text-muted">Select Agent to Chat With:</label>
                                        <select class="form-select" @bind="selectedAgentType">
                                            <option value="Orchestrator">üéØ Orchestrator (General Questions)</option>
                                            <option value="Translation">üìù Translation Agent</option>
                                            <option value="Technical">‚öôÔ∏è Technical Agent</option>
                                            <option value="Cultural">üåç Cultural Agent</option>
                                        </select>
                                    </div>
                                }

                                @* Chat History *@
                                <div class="chat-history border rounded p-3 mb-3" style="max-height: 300px; overflow-y: auto;" @ref="chatHistoryElement">
                                    @if (loadingChatHistory)
                                    {
                                        <div class="text-center">
                                            <div class="spinner-border spinner-border-sm text-primary" role="status">
                                                <span class="visually-hidden">Loading...</span>
                                            </div>
                                        </div>
                                    }
                                    else if (chatMessages.Count == 0)
                                    {
                                        <p class="text-muted text-center mb-0">
                                            <i class="bi bi-chat-left-text"></i> Ask questions about the translation quality
                                        </p>
                                    }
                                    else
                                    {
                                        @foreach (var msg in chatMessages)
                                        {
                                            <div class="mb-2 @(msg.Role == "user" ? "text-end" : "")">
                                                <div class="d-inline-block p-2 rounded @(msg.Role == "user" ? "bg-primary text-white" : "bg-light")" 
                                                     style="max-width: 80%;">
                                                    <small class="d-block text-@(msg.Role == "user" ? "white-50" : "muted") mb-1">
                                                        @(msg.Role == "user" ? "You" : GetAgentDisplayName(msg.AgentType))
                                                    </small>
                                                    <div style="white-space: pre-wrap;">@msg.Content</div>
                                                </div>
                                            </div>
                                        }
                                    }
                                </div>
                                
                                @* Chat Input *@
                                <div class="input-group">
                                    <input type="text" class="form-control" placeholder="Ask about the translation..."
                                           @bind="chatMessage" @bind:event="oninput"
                                           @onkeypress="HandleChatKeyPress"
                                           disabled="@sendingChat" />
                                    <button class="btn btn-primary" @onclick="SendChatMessage" disabled="@(sendingChat || string.IsNullOrWhiteSpace(chatMessage))">
                                        @if (sendingChat)
                                        {
                                            <span class="spinner-border spinner-border-sm"></span>
                                        }
                                        else
                                        {
                                            <i class="bi bi-send"></i>
                                        }
                                    </button>
                                </div>
                                @if (!string.IsNullOrEmpty(chatError))
                                {
                                    <div class="alert alert-danger mt-2 mb-0 py-1 px-2 small">
                                        @chatError
                                    </div>
                                }
                            </div>
                        </div>
                    }
                }
            </div>

            <div class="col-lg-4">
                <div class="card mb-4">
                    <div class="card-header">
                        <h5 class="mb-0"><i class="bi bi-gear"></i> Actions</h5>
                    </div>
                    <div class="card-body">
                        <div class="d-grid gap-2">
                            @if (job.Status == "PendingApproval")
                            {
                                <div class="alert alert-warning mb-3">
                                    <i class="bi bi-hourglass-split"></i> <strong>Awaiting Review</strong>
                                    <p class="small mb-0 mt-1">This translation is ready for human review.</p>
                                </div>
                                <button class="btn btn-success" @onclick="ShowApproveModal" disabled="@isApproving">
                                    @if (isApproving)
                                    {
                                        <span class="spinner-border spinner-border-sm me-1"></span>
                                    }
                                    <i class="bi bi-check-lg"></i> Approve Translation
                                </button>
                                <button class="btn btn-danger" @onclick="ShowRejectModal" disabled="@isApproving">
                                    <i class="bi bi-x-lg"></i> Reject Translation
                                </button>
                                <hr />
                            }
                            <button class="btn btn-outline-primary" @onclick="LoadJob" disabled="@loading">
                                <i class="bi bi-arrow-clockwise"></i> Refresh Status
                            </button>
                            @if (autoRefresh && IsProcessing)
                            {
                                <button class="btn btn-outline-secondary" @onclick="StopAutoRefresh">
                                    <i class="bi bi-pause"></i> Stop Auto-Refresh
                                </button>
                            }
                            else if (IsProcessing)
                            {
                                <button class="btn btn-outline-success" @onclick="StartAutoRefresh">
                                    <i class="bi bi-play"></i> Auto-Refresh
                                </button>
                            }
                            <button class="btn btn-outline-secondary" @onclick="GoBack">
                                <i class="bi bi-arrow-left"></i> Back to Dashboard
                            </button>
                        </div>
                    </div>
                </div>

                @if (job.Status == "Approved")
                {
                    <div class="alert alert-success">
                        <i class="bi bi-check-circle"></i> <strong>Approved</strong>
                        <p class="small mb-0 mt-1">This translation has been approved.</p>
                    </div>
                }
                else if (job.Status == "Rejected")
                {
                    <div class="alert alert-danger">
                        <i class="bi bi-x-circle"></i> <strong>Rejected</strong>
                        <p class="small mb-0 mt-1">This translation was rejected.</p>
                    </div>
                }

                @if (autoRefresh)
                {
                    <div class="alert alert-info">
                        <i class="bi bi-info-circle"></i> Auto-refreshing every 10 seconds...
                    </div>
                }
            </div>
        </div>
    }
</div>

