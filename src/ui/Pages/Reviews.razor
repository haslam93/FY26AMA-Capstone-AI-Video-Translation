@page "/reviews"
@using VideoTranslation.UI.Models
@using VideoTranslation.UI.Services
@inject ITranslationApiService ApiService
@inject NavigationManager Navigation

<PageTitle>Pending Reviews - Video Translation</PageTitle>

<div class="container-fluid py-4">
    <div class="row mb-4">
        <div class="col">
            <h2><i class="bi bi-clipboard-check"></i> Pending Reviews</h2>
            <p class="text-muted">Review and approve or reject translated videos</p>
        </div>
        <div class="col-auto">
            <button class="btn btn-outline-primary" @onclick="LoadPendingJobsAsync">
                <i class="bi bi-arrow-clockwise"></i> Refresh
            </button>
        </div>
    </div>

    @if (isLoading)
    {
        <div class="d-flex justify-content-center py-5">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
        </div>
    }
    else if (errorMessage != null)
    {
        <div class="alert alert-danger">
            <i class="bi bi-exclamation-triangle"></i> @errorMessage
        </div>
    }
    else if (pendingJobs == null || !pendingJobs.Any())
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle"></i> No jobs pending review. All translations have been reviewed!
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var job in pendingJobs)
            {
                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="card h-100">
                        <div class="card-header d-flex justify-content-between align-items-center">
                            <span class="badge bg-warning text-dark">
                                <i class="bi bi-hourglass-split"></i> Pending Review
                            </span>
                            <small class="text-muted">@FormatTimeAgo(job.ApprovalRequestedAt)</small>
                        </div>
                        <div class="card-body">
                            <h5 class="card-title">@(job.DisplayName ?? job.JobId)</h5>
                            <p class="card-text">
                                <span class="badge bg-secondary">@job.SourceLocale</span>
                                <i class="bi bi-arrow-right mx-2"></i>
                                <span class="badge bg-primary">@job.TargetLocale</span>
                            </p>

                            @if (job.ValidationResult != null)
                            {
                                <div class="mb-3">
                                    <div class="d-flex justify-content-between align-items-center mb-2">
                                        <span class="small text-muted">AI Quality Score</span>
                                        <span class="badge @GetScoreBadgeClass(job.ValidationResult.ConfidenceScore)">
                                            @((job.ValidationResult.ConfidenceScore * 100).ToString("F0"))%
                                        </span>
                                    </div>
                                    <div class="progress" style="height: 8px;">
                                        <div class="progress-bar @GetScoreBarClass(job.ValidationResult.ConfidenceScore)" 
                                             role="progressbar" 
                                             style="width: @((job.ValidationResult.ConfidenceScore * 100).ToString("F0"))%">
                                        </div>
                                    </div>
                                    @if (job.ValidationResult.Issues.Any())
                                    {
                                        <small class="text-warning">
                                            <i class="bi bi-exclamation-triangle"></i> 
                                            @job.ValidationResult.Issues.Count issue(s) found
                                        </small>
                                    }
                                </div>
                            }
                        </div>
                        <div class="card-footer">
                            <div class="btn-group w-100" role="group">
                                <button class="btn btn-outline-primary" @onclick="() => ViewDetails(job.JobId)">
                                    <i class="bi bi-eye"></i> View
                                </button>
                                <button class="btn btn-success" @onclick="() => ShowApproveModal(job)" disabled="@isProcessing">
                                    <i class="bi bi-check-lg"></i> Approve
                                </button>
                                <button class="btn btn-danger" @onclick="() => ShowRejectModal(job)" disabled="@isProcessing">
                                    <i class="bi bi-x-lg"></i> Reject
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

@* Approve Modal *@
@if (showApproveModal && selectedJob != null)
{
    <div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header bg-success text-white">
                    <h5 class="modal-title"><i class="bi bi-check-circle"></i> Approve Translation</h5>
                    <button type="button" class="btn-close btn-close-white" @onclick="CloseModals"></button>
                </div>
                <div class="modal-body">
                    <p>Are you sure you want to approve this translation?</p>
                    <div class="mb-3">
                        <label class="form-label">Your Name (optional)</label>
                        <input type="text" class="form-control" @bind="reviewerName" placeholder="Enter your name" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Comments (optional)</label>
                        <textarea class="form-control" @bind="comments" rows="2" placeholder="Any comments..."></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="CloseModals">Cancel</button>
                    <button type="button" class="btn btn-success" @onclick="ApproveJobAsync" disabled="@isProcessing">
                        @if (isProcessing)
                        {
                            <span class="spinner-border spinner-border-sm me-1"></span>
                        }
                        Approve
                    </button>
                </div>
            </div>
        </div>
    </div>
}

@* Reject Modal *@
@if (showRejectModal && selectedJob != null)
{
    <div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header bg-danger text-white">
                    <h5 class="modal-title"><i class="bi bi-x-circle"></i> Reject Translation</h5>
                    <button type="button" class="btn-close btn-close-white" @onclick="CloseModals"></button>
                </div>
                <div class="modal-body">
                    <p>Are you sure you want to reject this translation?</p>
                    <div class="mb-3">
                        <label class="form-label">Your Name (optional)</label>
                        <input type="text" class="form-control" @bind="reviewerName" placeholder="Enter your name" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Reason for Rejection</label>
                        <textarea class="form-control" @bind="rejectionReason" rows="3" placeholder="Explain why this translation is being rejected..."></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="CloseModals">Cancel</button>
                    <button type="button" class="btn btn-danger" @onclick="RejectJobAsync" disabled="@isProcessing">
                        @if (isProcessing)
                        {
                            <span class="spinner-border spinner-border-sm me-1"></span>
                        }
                        Reject
                    </button>
                </div>
            </div>
        </div>
    </div>
}

@code {
    private List<PendingApprovalJob>? pendingJobs;
    private bool isLoading = true;
    private bool isProcessing = false;
    private string? errorMessage;

    // Modal state
    private bool showApproveModal = false;
    private bool showRejectModal = false;
    private PendingApprovalJob? selectedJob;
    private string reviewerName = string.Empty;
    private string comments = string.Empty;
    private string rejectionReason = string.Empty;

    protected override async Task OnInitializedAsync()
    {
        await LoadPendingJobsAsync();
    }

    private async Task LoadPendingJobsAsync()
    {
        isLoading = true;
        errorMessage = null;
        StateHasChanged();

        try
        {
            var response = await ApiService.GetPendingApprovalsAsync();
            pendingJobs = response?.Jobs ?? new List<PendingApprovalJob>();
        }
        catch (Exception ex)
        {
            errorMessage = $"Failed to load pending jobs: {ex.Message}";
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }

    private void ViewDetails(string jobId)
    {
        Navigation.NavigateTo($"/jobs/{jobId}");
    }

    private void ShowApproveModal(PendingApprovalJob job)
    {
        selectedJob = job;
        showApproveModal = true;
        reviewerName = string.Empty;
        comments = string.Empty;
    }

    private void ShowRejectModal(PendingApprovalJob job)
    {
        selectedJob = job;
        showRejectModal = true;
        reviewerName = string.Empty;
        rejectionReason = string.Empty;
    }

    private void CloseModals()
    {
        showApproveModal = false;
        showRejectModal = false;
        selectedJob = null;
    }

    private async Task ApproveJobAsync()
    {
        if (selectedJob == null) return;

        isProcessing = true;
        StateHasChanged();

        try
        {
            await ApiService.ApproveJobAsync(
                selectedJob.JobId,
                string.IsNullOrWhiteSpace(reviewerName) ? null : reviewerName,
                string.IsNullOrWhiteSpace(comments) ? null : comments);

            CloseModals();
            await LoadPendingJobsAsync();
        }
        catch (Exception ex)
        {
            errorMessage = $"Failed to approve job: {ex.Message}";
        }
        finally
        {
            isProcessing = false;
            StateHasChanged();
        }
    }

    private async Task RejectJobAsync()
    {
        if (selectedJob == null) return;

        isProcessing = true;
        StateHasChanged();

        try
        {
            await ApiService.RejectJobAsync(
                selectedJob.JobId,
                string.IsNullOrWhiteSpace(reviewerName) ? null : reviewerName,
                string.IsNullOrWhiteSpace(rejectionReason) ? null : rejectionReason,
                null);

            CloseModals();
            await LoadPendingJobsAsync();
        }
        catch (Exception ex)
        {
            errorMessage = $"Failed to reject job: {ex.Message}";
        }
        finally
        {
            isProcessing = false;
            StateHasChanged();
        }
    }

    private static string FormatTimeAgo(DateTime? dateTime)
    {
        if (!dateTime.HasValue) return "Unknown";

        var span = DateTime.UtcNow - dateTime.Value;
        if (span.TotalMinutes < 1) return "Just now";
        if (span.TotalMinutes < 60) return $"{(int)span.TotalMinutes}m ago";
        if (span.TotalHours < 24) return $"{(int)span.TotalHours}h ago";
        if (span.TotalDays < 7) return $"{(int)span.TotalDays}d ago";
        return dateTime.Value.ToString("MMM d");
    }

    private static string GetScoreBadgeClass(double score)
    {
        return score switch
        {
            >= 0.8 => "bg-success",
            >= 0.6 => "bg-warning text-dark",
            _ => "bg-danger"
        };
    }

    private static string GetScoreBarClass(double score)
    {
        return score switch
        {
            >= 0.8 => "bg-success",
            >= 0.6 => "bg-warning",
            _ => "bg-danger"
        };
    }
}
